<Window x:Class="Pomodole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodole"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.4*"/>
            <ColumnDefinition Width="3.2*"/>
            <ColumnDefinition Width="3.4*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="labelHour" Content="00:" HorizontalAlignment="Right" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="50"/>
        <Label x:Name="labelMinute" Content="00" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="50" Grid.Column="1"/>
        <Label x:Name="labelSecond" Content=":00" HorizontalAlignment="Left" Margin="-10,0,0,0" VerticalAlignment="Center" FontSize="50" Grid.Column="2"/>
        <Button x:Name="buttonStart" Content="Start" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="80"/>

    </Grid>
</Window>
